# Minka Environment Configuration
# Copy this file to .env and fill in your values

# =====================================================
# GITHUB CONFIGURATION (Required)
# =====================================================
# Get your token from: https://github.com/settings/tokens
# Required scopes: copilot, repo, read:user
GITHUB_TOKEN=ghp_your_token_here

# =====================================================
# COPILOT CONFIGURATION
# =====================================================
# Available models: gpt-4o, gpt-4o-mini, claude-sonnet-4, etc.
COPILOT_MODEL=gpt-4o

# Session timeout in seconds
COPILOT_SESSION_TIMEOUT=3600

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
DB_PASSWORD=minka_secure_2024

# =====================================================
# MINKA CONFIGURATION
# =====================================================
# Mode: research, training, production
MINKA_MODE=research

# Log level: DEBUG, INFO, WARNING, ERROR
MINKA_LOG_LEVEL=INFO

# =====================================================
# FEATURE FLAGS
# =====================================================
# Enable streaming responses
ENABLE_STREAMING=true

# Enable MCP tools
ENABLE_MCP_TOOLS=true

# Enable lab integration
ENABLE_LABS=true

# Enable telemetry (anonymous usage stats)
ENABLE_TELEMETRY=false

# =====================================================
# SECURITY SETTINGS
# =====================================================
# Maximum execution time for tools (seconds)
MAX_TOOL_EXECUTION_TIME=300

# Allow dangerous operations (use with caution!)
ALLOW_DANGEROUS_OPERATIONS=false

# Sandbox level: strict, moderate, permissive
SANDBOX_LEVEL=strict

# =====================================================
# EXTERNAL APIs (Optional)
# =====================================================
# VirusTotal API Key (for malware analysis)
# VIRUSTOTAL_API_KEY=your_key_here

# Shodan API Key (for reconnaissance)
# SHODAN_API_KEY=your_key_here

# HaveIBeenPwned API Key (for breach monitoring)
# HIBP_API_KEY=your_key_here

# NVD API Key (for CVE lookups) - Optional but recommended
# NVD_API_KEY=your_key_here
