{
  "name": "Minka Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "pip install -r requirements.txt && pip install mcp",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "github.copilot",
        "github.copilot-ls"
      ]
    }
  },
  "remoteUser": "root",
  "workspaceFolder": "/workspaces/minka",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/minka,type=bind"
}
